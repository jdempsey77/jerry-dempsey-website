#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run linting
echo "📝 Running ESLint..."
npm run lint

# Run security audit
echo "🔒 Running security audit..."
npm run audit

# Test build
echo "🏗️  Testing build..."
npm run test:build

echo "✅ Pre-commit checks passed!"
